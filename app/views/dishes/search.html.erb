<%= form_with(url: search_dishes_path, method: :get, local: true) do %>
<div>
    <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Dishes') %>
</div>
<div>
    <%= submit_tag("Search", class: "button") %>
</div>
<% end %>

<p>
    Found <%= pluralize(@dishes.count, 'Dishes') %> when searching for: <%= params[:keywords] %>
</p>

<ul>
    <% @dishes.each do |dish| %>
      <li><%= link_to dish.name, dish %></li>
    <% end %>
</ul>