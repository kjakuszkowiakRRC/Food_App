<h1>Restaurants</h1>

<%= form_with(url: search_restaurants_path, method: :get, local: true) do %>
<div>
    <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Restaurants') %>
</div>
<div>
    <%= submit_tag("Search", class: "button") %>
</div>
<% end %>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
        <%= link_to restaurant.name, restaurant %> -
        <%= restaurant.restaurant_locations.take.address %>,
        <%= restaurant.locations.take.city  %>,
        <%= restaurant.locations.take.province  %>,
        <%= restaurant.locations.take.country  %>
    </li>
  <% end %>
</ul>

