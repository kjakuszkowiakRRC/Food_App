<%= form_with(url: search_restaurants_path, method: :get, local: true) do %>
<div>
    <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Restaurants') %>
</div>
<div>
    <%= submit_tag("Search", class: "button") %>
</div>
<% end %>

<p>
    Found <%= pluralize(@restaurants.count, 'Restaurant') %> when searching for: <%= params[:keywords] %>
</p>

<ul>
    <% @restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant %></li>
    <% end %>
</ul>